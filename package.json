{
  "name": "order-service",
  "version": "0.0.1",
  "description": "Final year project on decentralized exchange, built to serve CRUD services on top of gRPC server",
  "main": "index.js",
  "dependencies": {
    "@grpc/grpc-js": "^1.2.2",
    "cli-table": "^0.3.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "google-protobuf": "^3.19.4",
    "grpc-tools": "^1.11.2",
    "grpc_tools_node_protoc_ts": "^5.3.0",
    "inquirer": "^7.0.4",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "mongoose": "^6.2.0",
    "web3": "^1.7.0",
    "web3-eth-contract": "^1.7.0",
    "winston": "^3.5.1",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@typechain/truffle-v5": "^7.0.0",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/google-protobuf": "^3.15.5",
    "@types/inquirer": "^6.5.0",
    "@types/lowdb": "^1.0.9",
    "@types/mocha": "^9.1.0",
    "@types/yargs": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "chai": "^4.3.6",
    "eslint": "^8.8.0",
    "mocha": "^9.2.0",
    "typechain": "^7.0.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "lint": "yarn run eslint --fix --ext .ts src",
    "prebuild": "yarn run lint",
    "clean": "rm -rf ./src/proto && mkdir -p ./src/proto",
    "build": "sh ./scripts/build-proto.sh ./order.proto ./src/proto && yarn run tsc",
    "prestart": "yarn run build",
    "start:express": "node ./dist/express.server.js",
    "start:grpc": "node ./dist/grpc.server.js",
    "generate-types": "npx typechain --target=truffle-v5 './dist/abi/*.json'"
  },
  "author": "Jason Nathaniel",
  "license": "ISC"
}
