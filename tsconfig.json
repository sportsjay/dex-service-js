{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["@types/node", "@types/mocha", "@types/chai"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
